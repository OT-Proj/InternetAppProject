@model IEnumerable<InternetAppProject.Models.Workplace>

@{
    ViewData["Title"] = "Search";
}

<h1>Workplace search</h1>
<h6>Here you can search for a workplace by name.</h6>

<div>
    <input name="name" id="inpSearch" />
    <button class="btnSearch btn btn-primary">Search</button>
    <div class="spinner-grow text-success d-none" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.P_lat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.P_long)
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.P_lat
                    </td>
                    <td>
                        @item.P_long
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<script type="text/template" id="template">
    <tr>
        <td>
            ${name}
        </td>
        <td>
            ${p_lat}
        </td>
        <td>
            ${p_long}
        </td>
    </tr>
</script>

@section Scripts {
    <script src="~/js/searchWorkplace.js"></script>
}