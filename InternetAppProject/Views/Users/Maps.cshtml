
@{
    ViewData["Title"] = "Maps";
}

<h1>Maps</h1>

<div id="map" style="width: 900px; height: 400px;"></div>



@section Scripts{
    <script src="https://maps.google.com/maps/api/js?key=AIzaSyBv3FrtboIgOTxDsAS5u-HlPHOyy0_whV8&sensor=false"
            type="text/javascript"></script>

    <script type="text/javascript">
        var locations = [
            ['admin', 31.97012071073282, 34.77270090743654],
            ['Coogee Beach', -33.923036, 151.259052, 5],
            ['Cronulla Beach', -34.028249, 151.157507, 3],
            ['Manly Beach', -33.80010128657071, 151.28747820854187, 2],
            ['Maroubra Beach', -33.950198, 151.259302, 1]
        ];



        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 15,
            center: new google.maps.LatLng(31.97012071073282, 34.77270090743654),
            mapTypeId: google.maps.MapTypeId.ROADMAP
        });

        var infowindow = new google.maps.InfoWindow();

        var marker, i;

        for (i = 0; i < locations.length; i++) {
            marker = new google.maps.Marker({
                position: new google.maps.LatLng(locations[i][1], locations[i][2]),
                map: map
            });

            google.maps.event.addListener(marker, 'click', (function (marker, i) {
                return function () {
                    infowindow.setContent(locations[i][0]);
                    infowindow.open(map, marker);
                }
            })(marker, i));
        }
    </script>
}
