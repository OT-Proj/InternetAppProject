@model InternetAppProject.Models.Drive

@{
    ViewData["Title"] = "Upgrade drive";
}

<h1>Upgrade your drive</h1>

<h4>We'd like your money!</h4>
<h6>
    Please note you only pay for the <b>difference</b> of what you paid until now, <br />
    That means if you already have paid us in the past - you can upgrade for a lowered cost.
</h6>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DoUpgrade" enctype="multipart/form-data">
            <div class="form-group">
                <label class="control-label">Type</label>
                <select name="TypeId" class="form-control selectType" asp-items="ViewBag.Types"></select>
            </div>
            <table>
                <tbody>
                    <tr>
                        <td>Amount to Pay:</td>
                        <td>@ViewBag.Amount&nbsp;|&nbsp;</td> 
                        <td>Max. Images:</td>
                        <td>@ViewBag.Images</td>
                    </tr>
                 </tbody>
             </table>
   
             <br />
   
             <div class="form-group">
                <input type="submit" value="Upgrade" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<script type="text/template" id="template">
    <tr>
        <td>Amount to Pay:</td>
        <td>${amount}&nbsp;|&nbsp;</td> 
        <td>Max. Images:</td>
        <td>${images}</td>
    </tr>
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/updatePayment.js"></script>
}
