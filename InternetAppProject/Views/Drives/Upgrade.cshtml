@model InternetAppProject.Models.Drive

@{
    ViewData["Title"] = "Upgrade";
}

<h1>Upgrade your drive</h1>

<h4>please pay a lot!</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DoUpgrade" enctype="multipart/form-data">
            <div class="form-group">
                <label class="control-label">Type</label>
                <select name="TypeId" class="form-control" asp-items="ViewBag.Types"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
