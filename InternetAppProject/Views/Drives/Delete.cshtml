@model InternetAppProject.Models.Drive

@{
    ViewData["Title"] = "Delete";
}

<h1>Are you sure you want to delete @Model.UserId.Name's drive?</h1>
<h4 class="text-danger">Warning: deleting a drive will delete it's respective user and all of their images.</h4>
<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
