<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InternetAppProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/drive.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <img src="https://wwwi.colman.ac.il/info/images/CollegeLogo.png" class="img-fluid" alt="Responsive image" width="75" height="75" />
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">&nbsp; MoodleDrive</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (Context != null && Context.User != null && Context.User.Claims.FirstOrDefault(x => x.Type == "drive") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Drives" asp-action="Details" asp-route-id="@Context.User.Claims.FirstOrDefault(x => x.Type == "drive").Value">My Drive</a>
                            </li>
                        }
                        @if (Context != null && Context.User != null && Context.User.Claims.FirstOrDefault(x => x.Type == "Type") != null)
                        {
                            if (Context.User.Claims.FirstOrDefault(x => x.Type == "Type").Value == "Admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="PurchaseEvents" asp-action="Graphs">Graphs</a>
                                </li>
                            }
                        }

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Drives" asp-action="Index">My drive</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Search
                            </a>

                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Images" asp-action="Search">Image Search</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Search">Drive Search</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Tags" asp-action="Search">Tag Search</a>
                                </li>
                                <!--<li class="nav-item">

                <a class="nav-link text-dark" asp-area="" asp-controller="PurchaseEvents" asp-action="Search">Business plan search</a>
            </li>-->
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Edit">Edit user</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Images" asp-action="Create">Image upload</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Tags" asp-action="Index">All Tags</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                List
                            </a>

                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">users</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Drives" asp-action="Index">drives</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Images" asp-action="Index">images</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="PurchaseEvents" asp-action="Index">purchase</a>
                                </li>
                                <!--<li class="nav-item">>
                <a class="nav-link text-dark" asp-area="" asp-controller="Tags" asp-action="Index">Business plan</a>
            </li>-->

                            </ul>
                        </li>


                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                analytics
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="PurchaseEvents" asp-action="Graphs">Graphs</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Maps">Maps</a>
                                </li>

                            </ul>
                    </ul>
                    @{

                                    @if (Context != null && Context.User != null && Context.User.Identity.Name != null)
                                    {
                        <div>Hello @Context.User.Identity.Name, </div>
                                        <a class="nav-link text-dark" asp-controller="Users" asp-action="Logout">Logout</a> }
                                                    else
                                                    { <!--<button class=" btn btn-primary">Search</button>-->
                                                        <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Login">Already registered? click here to Login!</a>} }

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - InternetAppProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>