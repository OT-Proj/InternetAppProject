@model InternetAppProject.Models.Image

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Image</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Data != null)
            {
                string temp = Convert.ToBase64String(Model.Data);
                <img src="data:image/png;base64,@temp" class="img-fluid" alt="Responsive image" />
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UploadTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UploadTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EditTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EditTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsPublic)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsPublic)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tags)
        </dt>
        <dd class="col-sm-10">
            @foreach (Tag tag in Model.Tags)
            {
                <a asp-controller="Tags" asp-action="Details" asp-route-id="@tag.Id">
                    <span class="badge bg-primary"><span class="image-tag">@tag.Name</span></span>
                </a>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
